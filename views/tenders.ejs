<!DOCTYPE html>
<html>
<head>
  <title>TenderMatch â€“ Demo</title>
  <style>
    body {
      font-family: Arial;
      background: #f4f6f8;
    }
    h2 {
      text-align: center;
    }
    .card {
      background: #fff;
      padding: 15px;
      margin: 15px auto;
      width: 75%;
      border-radius: 6px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }
    .source {
      font-size: 13px;
      color: #666;
      margin-top: 6px;
    }
  </style>
</head>
<body>

<h2>Scraped Tender Data (Demo)</h2>

<% if (tenders.length === 0) { %>
  <p style="text-align:center">No tenders found</p>
<% } %>

<% tenders.forEach((t, i) => { %>
  <div class="card">
    <strong><%= i + 1 %>. <%= t.title %></strong>
    <div class="source">Source: <%= t.source %></div>
  </div>
<% }) %>

</body>
</html>
